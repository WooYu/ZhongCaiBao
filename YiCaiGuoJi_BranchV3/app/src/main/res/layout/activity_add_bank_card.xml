<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.developer.lecai.activity.AddBankCardActivity">

    <RelativeLayout
        android:id="@+id/rl_choose_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_198px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_bank_img"
            android:layout_width="@dimen/w_120px"
            android:layout_height="@dimen/h_115px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_58px"
            android:src="@drawable/bind_bank_card" />

        <TextView
            android:id="@+id/tv_bank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_50px"
            android:layout_marginTop="@dimen/h_45px"
            android:layout_toRightOf="@id/iv_bank_img"
            android:text="添加银行卡所属银行"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/h_38px" />

        <TextView
            android:id="@+id/tv_bank_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bank_title"
            android:layout_marginLeft="@dimen/w_50px"
            android:layout_marginTop="@dimen/h_20px"
            android:layout_toRightOf="@id/iv_bank_img"
            android:text="请添加银行卡用于收款"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/h_30px" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/w_22px"
            android:layout_height="@dimen/h_44px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_44px"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_137px"
        android:layout_marginTop="@dimen/w_28px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_45px"
            android:text="银行卡号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/h_44px" />

        <EditText
            android:id="@+id/et_add_cardnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_50px"
            android:layout_marginRight="@dimen/w_50px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:inputType="number"
            android:maxLength="20"
            android:textColorHint="@color/color_9e9e9e"
            android:textSize="@dimen/h_44px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_4px"
        android:background="@color/color_e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_137px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_45px"
            android:text="开户地址"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/h_44px" />

        <EditText
            android:id="@+id/et_add_kaihu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_50px"
            android:layout_marginRight="@dimen/w_50px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="开户地址"
            android:textColorHint="@color/color_9e9e9e"
            android:textSize="@dimen/h_44px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_4px"
        android:background="@color/color_e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_137px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_45px"
            android:text="真实姓名"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/h_44px" />

        <EditText
            android:id="@+id/et_add_realName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_50px"
            android:layout_marginRight="@dimen/w_50px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="真实姓名"
            android:textColorHint="@color/color_9e9e9e"
            android:textSize="@dimen/h_44px" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_button_submit"
        style="@style/button_submit"
        android:layout_marginTop="@dimen/w_56px"
        android:text="添加" />

</LinearLayout>
