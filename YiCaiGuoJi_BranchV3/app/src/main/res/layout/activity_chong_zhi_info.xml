<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_28px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/w_44px"
        android:paddingRight="@dimen/w_53px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="用户账号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px" />

            <TextView
                android:id="@+id/tv_chongzhi_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                tools:text="131313131" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="收款银行："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px" />

            <TextView
                android:id="@+id/tv_chongzhi_bannername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                tools:text="招商银行" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="收款人："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px" />

            <TextView
                android:id="@+id/tv_chongzhi_shoukuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                tools:text="吴林" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="收款账号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px" />

            <TextView
                android:id="@+id/tv_chongzhi_shoukuannum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                tools:text="131313131" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="充值金额："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px" />

            <TextView
                android:id="@+id/tv_chongzhi_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                tools:text="100" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="充值时间："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px" />

            <TextView
                android:id="@+id/tv_chongzhi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                tools:text="2017年10月11日 20:23:21" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="姓名："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px" />

            <EditText
                android:id="@+id/tv_chongzhi_zhuanzhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:background="@null"
                android:hint="请填写姓名"
                android:inputType="text"
                android:textColor="@color/color_cacaca"
                android:textSize="@dimen/w_36px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="银行账号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px" />

            <EditText
                android:id="@+id/tv_chongzhi_zhuanzhangnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:background="@null"
                android:hint="请填写银行账号"
                android:inputType="number"
                android:textColor="@color/color_cacaca"
                android:textSize="@dimen/w_36px" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_chongzhi_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_123px"
        android:layout_marginLeft="@dimen/w_44px"
        android:layout_marginRight="@dimen/w_44px"
        android:layout_marginTop="@dimen/h_70px"
        android:background="@drawable/loading_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/w_44px" />

</LinearLayout>