<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#efeff4"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/h_42px"
        android:layout_marginLeft="@dimen/w_40px"
        android:layout_marginRight="@dimen/w_40px"
        android:orientation="horizontal"
        android:background="@drawable/shape_round_white_bg"
        android:layout_height="@dimen/h_200px">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h_40px"
                android:layout_centerHorizontal="true"
                android:text="总会员数"
                android:textColor="#444444"
                android:layout_marginTop="@dimen/h_40px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h_40px"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:id="@+id/tv_total_money"
                android:textColor="#EB5A3F"
                android:layout_marginTop="@dimen/h_120px"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_marginTop="@dimen/h_8px"
            android:layout_marginBottom="@dimen/h_8px"
            android:layout_height="match_parent"
            android:background="#cccccc"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h_40px"
                android:layout_centerHorizontal="true"
                android:text="今日注册"
                android:textColor="#444444"
                android:layout_marginTop="@dimen/h_40px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h_40px"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:id="@+id/tv_today_income"
                android:textColor="#EB5A3F"
                android:layout_marginTop="@dimen/h_120px"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/h_54px"
        android:layout_marginLeft="@dimen/w_40px"
        android:layout_marginRight="@dimen/w_40px"
        android:id="@+id/rl_income_analy"
        android:background="@drawable/ovil_6cc84f_bg"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:text="收益分析"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/income_situation"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawablePadding="@dimen/w_25px"
            android:textSize="@dimen/h_48px"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/h_60px"
        android:layout_marginLeft="@dimen/w_40px"
        android:layout_marginRight="@dimen/w_40px"
        android:id="@+id/rl_user_infor"
        android:background="@drawable/ovil_1aaaac_bg"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:text="用户信息"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/user_infor"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawablePadding="@dimen/w_25px"
            android:textSize="@dimen/h_48px"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/h_60px"
        android:layout_marginLeft="@dimen/w_40px"
        android:id="@+id/tv_proxy_protocol"
        android:layout_marginRight="@dimen/w_40px"
        android:background="@drawable/ovil_734dc8_bg"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:text="代理协议"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/proxy_protocal"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawablePadding="@dimen/w_25px"
            android:textSize="@dimen/h_48px"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</LinearLayout>