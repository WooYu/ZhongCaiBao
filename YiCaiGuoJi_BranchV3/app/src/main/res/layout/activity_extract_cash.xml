<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_1px"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_371px"
        android:background="#e8554e">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h_32px"
            android:text="可提现金额（元）"
            android:textColor="@android:color/white"
            android:textSize="@dimen/h_36px" />

        <TextView
            android:id="@+id/tv_extract_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h_65px"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/h_86px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_2px"
            android:layout_alignParentBottom="true"
            android:background="#cecece" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add_bankcard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_199px"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/w_44px"
        android:paddingRight="@dimen/w_44px">

        <ImageView
            android:layout_width="@dimen/w_22px"
            android:layout_height="@dimen/h_38px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/my_goto" />

        <ImageView
            android:id="@+id/iv_add_bank"
            android:layout_width="@dimen/w_120px"
            android:layout_height="@dimen/h_116px"
            android:layout_marginTop="@dimen/h_41px"
            android:src="@drawable/bind_bank_card" />

        <TextView
            android:id="@+id/tv_add_bank_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_43px"
            android:layout_marginTop="@dimen/h_41px"
            android:layout_toRightOf="@id/iv_add_bank"
            android:text="添加银行卡"
            android:textColor="#333333"
            android:textSize="@dimen/h_38px" />

        <TextView
            android:id="@+id/tv_add_bank_card_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_add_bank"
            android:layout_marginLeft="@dimen/w_43px"
            android:layout_toRightOf="@id/iv_add_bank"
            android:text="请添加银行卡用于收款"
            android:textColor="#999999"
            android:textSize="@dimen/h_32px" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/w_44px"
        android:paddingTop="@dimen/h_28px"
        android:text="提现金额"
        android:textColor="#999999"
        android:textSize="@dimen/h_38px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_190px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/h_34px"
        android:paddingLeft="@dimen/w_44px"
        android:paddingRight="@dimen/w_44px"
        android:paddingTop="@dimen/h_34px">

        <ImageView
            android:layout_width="@dimen/w_54px"
            android:layout_height="@dimen/h_64px"
            android:src="@drawable/money_dollar" />

        <EditText
            android:id="@+id/et_input_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/h_34px"
            android:background="@null"
            android:hint="最小提现金额为100元"
            android:inputType="numberDecimal"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/h_72px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_1px"
        android:background="#cecece" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_137px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/w_44px"
        android:paddingRight="@dimen/w_44px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现密码"
            android:textColor="#333333"
            android:textSize="@dimen/h_36px" />

        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/h_34px"
            android:background="@null"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:hint="请输入提现密码"
            android:textColor="#cacaca"
            android:textSize="@dimen/h_36px" />

    </LinearLayout>

    <Button
        android:id="@+id/button_tikuan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_120px"
        android:layout_marginLeft="@dimen/w_24px"
        android:layout_marginRight="@dimen/w_24px"
        android:layout_marginTop="@dimen/h_70px"
        android:background="#fd5579"
        android:gravity="center"
        android:text="提款"
        android:textColor="@android:color/white"
        android:textSize="@dimen/h_38px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_look_my_bankcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看我的银行卡>>"
            android:textColor="#15A7F3"
            android:textSize="@dimen/h_34px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/h_48px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温馨提示："
                android:textColor="#999999"
                android:textSize="@dimen/h_34px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="1.建议在右上角设置功能内修改资金密码（提现密码）,要与登录密码区分 （初始提现密码为登录密码）"
                android:textColor="#999999"
                android:textSize="@dimen/h_34px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.提现时间为早9：00—晚22：00"
                android:textColor="#999999"
                android:textSize="@dimen/h_34px" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>