<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.developer.lecai.activity.FangJianActivity">

    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/title_bar_bg"
        android:padding="10dp">

        <ImageView
            android:id="@+id/fangjian_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="房间列表"
            android:textColor="@color/dibu_bg"
            android:textSize="18sp" />
    </RelativeLayout>

    <!--房间1、2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/Bj_FJ1_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_bg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/vip_fangjian" />

            <TextView
                android:id="@+id/Bj_FJ1_ZaiXianPerson_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_bg1"
                android:layout_margin="20dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/vip_icon"
                android:text="156人"
                android:textColor="@color/dibu_bg"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_bg1"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:text="01房"
                android:textColor="@color/dibu_bg"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Bj_FJ2_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_bg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/vip_fangjian" />

            <TextView
                android:id="@+id/Bj_FJ2_ZaiXianPerson_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_bg2"
                android:layout_margin="20dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/vip_icon"
                android:text="156人"
                android:textColor="@color/dibu_bg"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_bg2"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:text="02房"
                android:textColor="@color/dibu_bg"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

    <!--房间3、4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/Bj_FJ3_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_bg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/vip_fangjian" />

            <TextView
                android:id="@+id/Bj_FJ3_ZaiXianPerson_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_bg3"
                android:layout_margin="20dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/vip_icon"
                android:text="156人"
                android:textColor="@color/dibu_bg"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_bg3"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:text="03房"
                android:textColor="@color/dibu_bg"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Bj_FJ4_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_bg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/vip_fangjian" />

            <TextView
                android:id="@+id/Bj_FJ4_ZaiXianPerson_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_bg4"
                android:layout_margin="20dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/vip_icon"
                android:text="156人"
                android:textColor="@color/dibu_bg"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_bg4"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:text="04房"
                android:textColor="@color/dibu_bg"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>