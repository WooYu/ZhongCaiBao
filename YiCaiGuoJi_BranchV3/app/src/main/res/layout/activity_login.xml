<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.developer.lecai.activity.LoginActivity">

    <ImageView
        android:id="@+id/iv_login_avtor"
        android:layout_width="@dimen/w_200px"
        android:layout_height="@dimen/w_200px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/h_80px"
        android:layout_marginTop="@dimen/h_80px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w_50px"
        android:background="@drawable/edittext_bg"
        android:orientation="vertical"
        android:padding="@dimen/w_30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_100px"
            android:layout_margin="@dimen/w_20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/h_30px"
                android:layout_marginRight="@dimen/h_20px"
                android:text=" 账号"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/fengexian2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/w_30px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/h_30px"
                android:layout_marginRight="@dimen/h_20px"
                android:text="密码"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/bt_submit"
        style="@style/button_submit"
        android:layout_marginTop="@dimen/h_50px"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_50px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_wxlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/gapsize_a"
            android:text="微信登录"
            android:textSize="@dimen/h_44px" />

        <TextView
            android:id="@+id/tv_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/gapsize_a"
            android:text="快速注册"
            android:textSize="@dimen/h_44px" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_50px"
        android:text="忘记密码"
        android:textSize="@dimen/h_44px"
        android:visibility="gone" />
</LinearLayout>
