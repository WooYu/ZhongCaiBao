<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.developer.lecai.activity.RechargeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_123px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/w_48px"
            android:text="当前账号："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/h_36px" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/w_48px"
            android:text="18309090876"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/h_36px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_37px"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_46px"
            android:layout_marginTop="@dimen/h_38px"
            android:background="@color/white"
            android:text="充值金额"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/h_36px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_128px"
            android:layout_marginTop="@dimen/h_52px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/h_38px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/icon_money" />

            <EditText
                android:id="@+id/et_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/h_36px"
                android:text="100"
                android:textSize="@dimen/h_65px" />

            <ImageView
                android:id="@+id/iv_money_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/h_44px"
                android:scaleType="fitXY"
                android:src="@drawable/delete" />
        </LinearLayout>

        <include layout="@layout/h_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_182px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/h_44px">

            <ToggleButton
                android:id="@+id/tb_money_100"
                android:layout_width="@dimen/w_300px"
                android:layout_height="@dimen/h_98px"
                android:background="@drawable/selector_money_button"
                android:checked="true"
                android:textColor="@drawable/selector_money_button_text"
                android:textOff="100"
                android:textOn="100" />

            <ToggleButton
                android:id="@+id/tb_money_200"
                android:layout_width="@dimen/w_300px"
                android:layout_height="@dimen/h_98px"
                android:layout_marginLeft="@dimen/h_27px"
                android:background="@drawable/selector_money_button"
                android:checked="false"
                android:textColor="@drawable/selector_money_button_text"
                android:textOff="200"
                android:textOn="200" />

            <ToggleButton
                android:id="@+id/tb_money_300"
                android:layout_width="@dimen/w_300px"
                android:layout_height="@dimen/h_98px"
                android:layout_marginLeft="@dimen/h_27px"
                android:background="@drawable/selector_money_button"
                android:checked="false"
                android:textColor="@drawable/selector_money_button_text"
                android:textOff="300"
                android:textOn="300" />
        </LinearLayout>

        <include layout="@layout/h_line" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
