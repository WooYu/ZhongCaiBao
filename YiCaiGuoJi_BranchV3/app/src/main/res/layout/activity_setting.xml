<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_277px"
        android:layout_marginTop="@dimen/h_28px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/w_44px"
        android:paddingRight="@dimen/w_53px">

        <RelativeLayout
            android:id="@+id/rl_setting_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="修改密码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/my_goto" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <RelativeLayout
            android:id="@+id/rl_setting_zjpsw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="修改资金密码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/my_goto" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_277px"
        android:layout_marginTop="@dimen/h_56px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/w_44px"
        android:paddingRight="@dimen/w_53px">

        <RelativeLayout
            android:id="@+id/rl_setting_kefu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="联系客服"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/my_goto" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <RelativeLayout
            android:id="@+id/rl_setting_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="帮助中心"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/my_goto" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_our"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_137px"
        android:layout_marginTop="@dimen/h_56px"
        android:background="@color/white"
        android:paddingLeft="@dimen/w_44px"
        android:paddingRight="@dimen/w_53px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/w_36px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/my_goto" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_setting_outload"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_123px"
        android:layout_marginLeft="@dimen/w_44px"
        android:layout_marginRight="@dimen/w_44px"
        android:layout_marginTop="@dimen/h_70px"
        android:background="@drawable/loading_bg"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/w_40px" />

</LinearLayout>