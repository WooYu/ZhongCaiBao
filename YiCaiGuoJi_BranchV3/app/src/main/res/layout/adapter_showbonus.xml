        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/w_146px"
            android:layout_height="@dimen/w_146px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_36px"
            android:layout_marginRight="@dimen/w_36px"
            android:scaleType="fitXY"
            android:src="@drawable/home_item_1" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_img"
            android:layout_marginTop="@dimen/h_66px"
            android:text="分分彩"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/h_36px" />
        <TextView
            android:id="@+id/tv_period1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_title"
            android:layout_alignBaseline="@id/tv_title"
            android:layout_marginLeft="@dimen/w_40px"
            android:text="第"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/h_28px" />

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_period1"
            android:layout_alignBaseline="@id/tv_title"
            android:text="201706251310"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/h_28px" />
        <TextView
            android:id="@+id/tv_period2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_period"
            android:layout_alignBaseline="@id/tv_title"
            android:text="期"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/h_28px" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_period2"
            android:layout_alignBaseline="@id/tv_title"
            android:layout_marginLeft="@dimen/w_10px"
            android:text="21时50分"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/h_28px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_time"
            android:layout_alignBaseline="@id/tv_title"
            android:text="开奖"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/h_28px" />
        <ImageView
