<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_28px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/w_44px"
        android:paddingRight="@dimen/w_53px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:text="用户账号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_chongzhi_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="131313131"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                android:layout_marginLeft="@dimen/w_56px"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:text="收款银行："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_chongzhi_bannername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                android:layout_marginLeft="@dimen/w_56px"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:text="收款人："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_chongzhi_shoukuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="友情云店"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                android:layout_marginLeft="@dimen/w_56px"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:text="收款账号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_chongzhi_shoukuannum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                android:layout_marginLeft="@dimen/w_56px"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:text="充值金额："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_chongzhi_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                android:layout_marginLeft="@dimen/w_56px"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:text="充值时间："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_chongzhi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年10月11日 20:23:21"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_36px"
                android:layout_marginLeft="@dimen/w_56px"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:text="微信昵称"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px"
                android:gravity="right"
                />
            <EditText
                android:id="@+id/tv_chongzhi_zhuanzhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:background="@null"
                android:hint="请填写微信昵称"
                android:textColor="@color/color_cacaca"
                android:textSize="@dimen/w_36px"
                android:inputType="numberPassword"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_137px"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="@dimen/w_300px"
                android:layout_height="wrap_content"
                android:text="微信账号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/w_38px"
                android:gravity="right"
                />
            <EditText
                android:id="@+id/tv_chongzhi_zhuanzhangnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_56px"
                android:background="@null"
                android:hint="请填写微信账号"
                android:textColor="@color/color_cacaca"
                android:textSize="@dimen/w_36px"
                android:inputType="numberPassword"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_chongzhi_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_123px"
        android:layout_marginLeft="@dimen/w_44px"
        android:layout_marginRight="@dimen/w_44px"
        android:layout_marginTop="@dimen/h_70px"
        android:background="@drawable/loading_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/w_44px" />

</LinearLayout>