<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:background="#55000000"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/gapsize_d"
            android:drawableStart="@drawable/bet_service"
            android:gravity="center_vertical"
            android:padding="@dimen/gapsize_d"
            android:text="@string/bet_customerservice"
            android:textColor="@color/black"
            android:textSize="@dimen/typesize_c" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cl_gray" />

        <TextView
            android:id="@+id/tv_betrecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/gapsize_d"
            android:drawableStart="@drawable/bet_record"
            android:gravity="center_vertical"
            android:padding="@dimen/gapsize_d"
            android:text="@string/bet_record"
            android:textColor="@color/black"
            android:textSize="@dimen/typesize_c" />
    </LinearLayout>
</RelativeLayout>