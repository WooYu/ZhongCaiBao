<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_120px"
    android:layout_marginTop="@dimen/h_28px"
    android:layout_marginBottom="@dimen/h_26px"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.92"
        android:layout_marginLeft="@dimen/w_28px"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hemai_caipiao"
            android:layout_width="match_parent"
            android:text="重庆六合彩xx第一期第二次第三场"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="#222222"
            android:textSize="@dimen/h_40px"
            android:layout_height="@dimen/h_80px" />

        <TextView
            android:id="@+id/hemai_leixing"
            android:layout_width="match_parent"
            android:text="大小单双"
            android:textColor="#9b9b9b"
            android:gravity="center_vertical"
            android:textSize="@dimen/h_38px"
            android:layout_height="@dimen/h_60px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:gravity="right|center_vertical"
        android:layout_marginRight="@dimen/w_32px"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hemai_jiangjin"
            android:layout_width="wrap_content"
            android:text="0"
            android:textColor="#040404"
            android:gravity="center_vertical"
            android:textSize="@dimen/h_40px"
            android:layout_height="@dimen/h_60px" />

        <TextView
            android:id="@+id/hemai_zhuangtai"
            android:layout_width="wrap_content"
            android:text="下单取消"
            android:textColor="#9b9b9b"
            android:gravity="center_vertical"
            android:textSize="@dimen/h_40px"
            android:layout_height="@dimen/h_60px" />
    </LinearLayout>

</LinearLayout>