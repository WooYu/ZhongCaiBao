<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_90px"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical"
    android:paddingLeft="@dimen/w_45px"
    android:paddingRight="@dimen/w_45px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/tv_huishui_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1220-90-27"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/w_38px" />

        <TextView
            android:id="@+id/tv_huishui_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="12"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/w_38px" />
    </RelativeLayout>

</LinearLayout>