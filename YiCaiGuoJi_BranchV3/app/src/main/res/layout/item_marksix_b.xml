<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="@dimen/gapsize_d"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="@dimen/w_100px"
        android:layout_height="@dimen/w_100px"
        android:background="@drawable/selector_marksix_ballbg_b"
        android:gravity="center"
        tools:text="生肖"
        android:textColor="@drawable/selector_marksix_textcolor"
        android:textSize="@dimen/w_40px" />

    <TextView
        android:id="@+id/tv_odds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/w_10px"
        tools:text="30"
        android:textColor="@color/cl_gray"
        android:textSize="@dimen/w_40px" />
</LinearLayout>