<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/gapsize_d">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_marksix_ballbg_c"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:padding="@dimen/gapsize_d"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@drawable/selector_marksix_textcolor"
            android:textSize="@dimen/w_40px"
            tools:text="6" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/gapsize_d"
            android:gravity="center_horizontal"
            android:textColor="@drawable/selector_marksix_textcolor"
            android:textSize="@dimen/w_40px"
            tools:text="6" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_odds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/w_10px"
        android:textColor="@color/cl_gray"
        android:textSize="@dimen/w_40px"
        tools:text="30" />
</LinearLayout>