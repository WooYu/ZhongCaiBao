<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/w_800px"
        android:layout_height="wrap_content"
        android:background="@drawable/active_bg_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/h_20px"
            android:layout_marginLeft="@dimen/w_20px"
            android:layout_marginTop="@dimen/h_20px"
            android:text="注单设定"
            android:textColor="@color/black"
            android:textSize="@dimen/typesize_a" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_2px"
            android:background="@color/app_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/h_20px"
            android:layout_marginLeft="@dimen/w_20px"
            android:layout_marginTop="@dimen/h_20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                android:text="赔率："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:id="@+id/tv_latiao_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                tools:text="100"
                android:textColor="@color/color_E14343"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_55px"
                android:text="返利："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:id="@+id/tv_latiao_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                tools:text="100"
                android:textColor="@color/color_E14343"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sb_latiao_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/h_20px"
            android:layout_marginTop="@dimen/h_20px"
            android:max="100"
            android:progress="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/h_20px"
            android:layout_marginLeft="@dimen/w_20px"
            android:layout_marginTop="@dimen/h_20px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                android:text="单注金额："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <EditText
                android:id="@+id/et_latiao_je"
                android:layout_width="@dimen/h_200px"
                android:layout_height="@dimen/h_80px"
                android:layout_marginLeft="@dimen/w_5px"
                android:background="@drawable/edittext_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="8"
                android:text="2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:id="@+id/tv_latiao_yuan"
                android:layout_width="@dimen/w_80px"
                android:layout_height="@dimen/w_80px"
                android:layout_marginLeft="@dimen/w_15px"
                android:background="@drawable/latiao_selector"
                android:gravity="center"
                android:text="元"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:id="@+id/tv_latiao_jiao"
                android:layout_width="@dimen/w_80px"
                android:layout_height="@dimen/w_80px"
                android:layout_marginLeft="@dimen/w_15px"
                android:background="@drawable/latiao_selector"
                android:gravity="center"
                android:text="角"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:id="@+id/tv_latiao_fen"
                android:layout_width="@dimen/w_80px"
                android:layout_height="@dimen/w_80px"
                android:layout_marginLeft="@dimen/w_15px"
                android:background="@drawable/latiao_selector"
                android:gravity="center"
                android:text="分"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/h_40px"
            android:layout_marginLeft="@dimen/w_20px"
            android:layout_marginTop="@dimen/h_40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                android:text="总额："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:id="@+id/tv_latiao_ze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                tools:text="100"
                android:textColor="@color/color_E14343"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                android:text="元"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_55px"
                android:text="注数："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:id="@+id/tv_latiao_zs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                tools:text="100"
                android:textColor="@color/color_E14343"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                android:text="注"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/h_60px"
            android:layout_marginLeft="@dimen/w_20px"
            android:layout_marginTop="@dimen/h_20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                android:text="若中奖，单注最高中："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />

            <TextView
                android:id="@+id/tv_latiao_zg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                tools:text="100"
                android:textColor="@color/color_E14343"
                android:textSize="@dimen/typesize_b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_5px"
                android:text="元"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_2px"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_latiao_qx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/gapsize_d"
                android:text="取消"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/typesize_c" />

            <TextView
                android:id="@+id/tv_latiao_qd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_E14343"
                android:gravity="center"
                android:padding="@dimen/gapsize_d"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/typesize_c" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>