<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_327px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_merge_zhuiHao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="追"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/h_42px"
                android:background="@color/red"
                android:padding="@dimen/w_5px"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_59px"
                android:layout_marginTop="@dimen/h_42px">


                <com.developer.lecai.view.RoundProgressBar
                    android:id="@+id/pb_listitem_progress"
                    android:layout_width="@dimen/w_205px"
                    android:layout_height="@dimen/w_205px"
                    app:max="100"
                    app:roundColor="@color/app_bg"
                    app:roundProgressColor="@color/red"
                    app:style="STROKE"
                    app:textIsDisplayable="false" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_merge_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/color_eb5a4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_merge_bdprogress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10%"
                        android:textColor="@color/color_FD8023"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/w_700px"
            android:layout_height="@dimen/h_250px"
            android:layout_marginLeft="@dimen/w_55px"
            android:layout_marginTop="@dimen/h_42px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_listitem_caipiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重庆时时彩"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/w_32px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/w_60px"
                    android:text="发起人："
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/w_32px" />

                <TextView
                    android:id="@+id/tv_listitem_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我问问"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/w_32px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_3px"
                android:layout_marginTop="@dimen/h_20px"
                android:background="@color/color_e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/h_20px">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_mergedetail_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40元"
                        android:textColor="@color/color_e8554e"
                        android:textSize="@dimen/w_36px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/tv_mergedetail_total"
                        android:gravity="center"
                        android:text="总金额"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/w_28px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_mergedetail_single"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2元"
                        android:textColor="@color/color_e8554e"
                        android:textSize="@dimen/w_36px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/tv_mergedetail_single"
                        android:gravity="center"
                        android:text="每份"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/w_28px" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_mergedetail_win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中奖"
                        android:textColor="@color/color_e8554e"
                        android:textSize="@dimen/w_36px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/h_46px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否追号："
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/w_28px" />

                        <TextView
                            android:id="@+id/tv_listitem_zhuihao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="否"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/w_28px" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/w_50px"
            android:src="@drawable/my_goto" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_14px"
        android:background="@color/color_f5f5f5" />
</LinearLayout>