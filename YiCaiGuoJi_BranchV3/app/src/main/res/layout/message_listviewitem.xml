<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_180px"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical"
    android:paddingLeft="@dimen/w_45px"
    android:paddingRight="@dimen/w_45px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        >

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="系统公告"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/w_38px" />

        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2071-12-22 08:32"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/w_38px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_message_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2071-12-22 08:32"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/w_36px"
        />
</LinearLayout>