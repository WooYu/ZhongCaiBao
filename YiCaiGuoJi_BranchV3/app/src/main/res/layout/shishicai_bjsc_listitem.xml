                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="双"
                    android:textColor="#333333"
                    android:textSize="@dimen/h_36px" />

                <TextView
                    android:id="@+id/tv_ffc_qing"
